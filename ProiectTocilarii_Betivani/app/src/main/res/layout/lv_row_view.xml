<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/adapter_background">

    <ImageView
        android:id="@+id/lv_row_typeIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/icon_coins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lv_row_type"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/lv_row_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/lv_row_account_type"
        app:layout_constraintEnd_toStartOf="@+id/lv_row_date"
        app:layout_constraintStart_toEndOf="@+id/lv_row_typeIcon"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/lv_row_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lv_row_date"
        app:layout_constraintStart_toEndOf="@+id/lv_row_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textAlignment="textEnd"
        />
    <TextView
        android:id="@+id/lv_row_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lv_row_balance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_row_type"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textAlignment="textEnd"
        />

    <TextView
        android:id="@+id/lv_row_bank_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lv_row_bankName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lv_row_iban"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textAlignment="textStart"
        />

    <TextView
        android:id="@+id/lv_row_iban"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lv_row_iban"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lv_row_balance"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textAlignment="textEnd"
        />

</androidx.constraintlayout.widget.ConstraintLayout>