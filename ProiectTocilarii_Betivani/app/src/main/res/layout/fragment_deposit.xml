<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FragmentCredit"
    android:id="@+id/fragment_credit">

    <TextView
        android:id="@+id/deposit_holder_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/holder_credit_label"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/credit_holder_tv"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        />
    <TextView
        android:id="@+id/deposit_holder_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deposit_holder_label"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />

    <TextView
        android:id="@+id/deposit_credit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/deposit_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deposit_holder_label"
        app:layout_constraintBottom_toTopOf="@id/deposit_iban_label"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:id="@+id/deposit_iban_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/iban_credit_label"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/deposit_iban_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deposit_credit_tv" />
    <TextView
        android:id="@+id/deposit_iban_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deposit_iban_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />

    <TextView
        android:id="@+id/deposit_rate_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/deposit_rate_label"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/deposit_rate_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deposit_iban_tv"
        />

    <TextView
        android:id="@+id/deposit_rate_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deposit_rate_label"
        app:layout_constraintTop_toBottomOf="@id/deposit_iban_tv"
        />

    <TextView
        android:id="@+id/deposit_create_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/created_on_credit_label"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deposit_rate_label"
        app:layout_constraintEnd_toStartOf="@+id/deposit_expiration_label"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />
    <TextView
        android:id="@+id/deposit_expiration_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/period_credit_label"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deposit_rate_tv"
        app:layout_constraintStart_toEndOf="@+id/deposit_create_label"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />

    <TextView
        android:id="@+id/deposit_create_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deposit_create_label"
        app:layout_constraintEnd_toStartOf="@+id/deposit_expiration_tv"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />
    <TextView
        android:id="@+id/deposit_expiration_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deposit_expiration_label"
        app:layout_constraintStart_toEndOf="@+id/deposit_create_tv"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />

    <TextView
        android:id="@+id/deposit_balance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deposit_expiration_tv"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />

    <TextView
        android:id="@+id/deposit_minValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:text="@string/deposit_0"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@+id/deposit_maxValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deposit_progressBar"/>

    <TextView
        android:id="@+id/deposit_maxValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:textSize="24dp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/deposit_minValue"
        app:layout_constraintTop_toBottomOf="@id/deposit_progressBar" />

    <ProgressBar
        android:id="@+id/deposit_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:minHeight="16dp"
        android:scaleY="3"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deposit_balance_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>